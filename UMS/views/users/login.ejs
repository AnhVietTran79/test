<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style1.css">
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Jomhuria&display=swap');
    </style>
</head>
<body class="login-page">
    <!-- Button to switch theme between light and dark mode -->
    <header>
    <button id="theme-switch">
        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M480-120q-150 0-255-105T120-480q0-150 105-255t255-105q14 0 27.5 1t26.5 3q-41 29-65.5 75.5T444-660q0 90 63 153t153 63q55 0 101-24.5t75-65.5q2 13 3 26.5t1 27.5q0 150-105 255T480-120Z"/></svg>
        <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 -960 960 960" width="24px" fill="#5f6368"><path d="M480-280q-83 0-141.5-58.5T280-480q0-83 58.5-141.5T480-680q83 0 141.5 58.5T680-480q0 83-58.5 141.5T480-280ZM200-440H40v-80h160v80Zm720 0H760v-80h160v80ZM440-760v-160h80v160h-80Zm0 720v-160h80v160h-80ZM256-650l-101-97 57-59 96 100-52 56Zm492 496-97-101 53-55 101 97-57 59Zm-98-550 97-101 59 57-100 96-56-52ZM154-212l101-97 55 53-97 101-59-57Z"/></svg>
    </button>

    <h2 class="Webname"><a href="/home">Genius Ticket</a></h2>
    </header>
    <!--Login Form-->
    <div class="form-container">
        <div class="form-col">
            <div class="btn-box">
                <button class="btn btn-1" id="login">Log In</button>
                <button class="btn btn-2" id="register"><a class="register-a" href="/register">Register</a></button>
            </div>

            <!--Login Form container-->
            <form action="/login" method="post" class="form-box login-form">
                <div class="lo-form-title">
                    <span>Login</span>
                </div>
                <div class="form-inputs">
                    <div class="input-box">
                        <input type="email" name="email" class="inputs input-field" placeholder="Email" required>
                        <ion-icon name="mail" class="icon"></ion-icon>
                    </div>
                    <div class="input-box">
                        <input type="password" name="password" oninput="changeIcon(this.value)" id="logPassword" class="inputs input-field" placeholder="Password" required>
                        <ion-icon name="eye-off" class="icon" id="log-pass-icon" onclick="myLogPassword()"></ion-icon>
                    </div>
                    <div class="forgot-pass">
                        <a href="/forget">Forgot password?</a>
                    </div>
                    <div class="input-box">
                        <button value="Login" class="inputs login-submit-btn">
                            <span>Log In</span>
                        </button>
                    </div>
                </div>
                <% 
                    if(typeof message !== 'undefined'){
                        %>
                        <p style="font-size: 20px"><%= message %></p>
                        <%
                    } 
                %>
                <div class="gg-social-login">
                    <div class="social-login-box">
                        <ion-icon name="logo-google" class="social-login-icon"></ion-icon>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Scripts -->
    <script type="text/javascript" src="/js/darkmode.js" defer></script>
    <script src="/js/script.js"></script>
    <script src="https://unpkg.com/ionicons@4.5.10-0/dist/ionicons.js"></script>
    
</body>
</html>