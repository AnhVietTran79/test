<% include('../layouts/header.ejs') %>


<h1>Dashboard</h1>



<table width="50%">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Image</th>
        <th>Verified</th>
        <th>Actions</th>
    </tr>

    <%
        if (users.length > 0) {
            for (let i = 0; i < users.length; i++) {
                %>
                <tr>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].email %></td>
                    <td><img src="../userImages/<%= users[i].image %>" alt="<%= users[i].image %>" width="100px" height="100px"></td>
                    <td><%
                        if (users[i].is_verified == 1) {
                            %>
                            <p>Yes</p>
                            <%
                        } else {
                            %>
                            <p>No</p>
                            <%
                        }
                        %>
                    </td>
                    <td><a href="../admin/edit-user?id=<%= users[i]._id %>">Edit</a></td>
                </tr>
                <%
            }
        } else {
            %>
            <tr>
                <td coldspan="5">Users not found</td>
            </tr>

            <%
        }
    %>
</table>
<br>
<a href="/admin/home">Go to Home</a>

<% include('../layouts/footer.ejs') %>